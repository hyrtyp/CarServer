<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/main_top_margin"
        android:orientation="horizontal" 
        android:layout_marginBottom="@dimen/view_margin">

        <Button
            android:id="@+id/btn_product"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/bg_tab_left_focus"
            android:gravity="center"
            android:text="商品"
            android:textColor="#fff"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_service"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/bg_tab_center"
            android:gravity="center"
            android:text="服务"
            android:textColor="@color/login_blue"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_preferential"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/bg_tab_right"
            android:gravity="center"
            android:text="优惠"
            android:textColor="@color/login_blue"
            android:textSize="25sp" />
    </LinearLayout>
    
     <FrameLayout 
         android:id="@+id/layout_content"
         android:layout_width="fill_parent"
         android:layout_height="0dp"
         android:layout_weight="1"/>

</LinearLayout>
