<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_margin"
                android:background="@drawable/bg_textview_gray"
                android:padding="@dimen/view_margin" >

                <LinearLayout
                    android:id="@+id/ll_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/view_margin_small" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="资质类型："
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_zztypename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/view_margin"
                        android:singleLine="true"
                        android:text="zzzzzzz"
                        android:textColor="#ff7a7a7a"
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/view_margin_small" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="审核级别："
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_zzlevelname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/view_margin"
                        android:singleLine="true"
                        android:text="zzzzzzz"
                        android:textColor="#ff7a7a7a"
                        android:textSize="13dp" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="资质图片1"
                android:paddingLeft="@dimen/view_margin" 
                android:layout_marginTop="@dimen/view_margin"
                android:textColor="#000"
                android:textSize="13dp" />

             <ImageView
                android:id="@+id/iv_photo11"
                android:layout_width="291dp"
                android:layout_height="212dp"
                android:src="@drawable/bg_img_default"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/view_margin_small"
                android:background="@drawable/bg_verification_photo_add"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:paddingLeft="@dimen/view_margin" 
                android:layout_marginTop="@dimen/view_margin"
                android:text="资质图片2"
                android:textColor="#000"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/iv_photo22"
                android:layout_width="291dp"
                android:layout_height="212dp"
                android:src="@drawable/bg_img_default"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/view_margin_small"
                android:layout_marginBottom="@dimen/view_margin"
                android:background="@drawable/bg_verification_photo_add"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="122dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/view_margin"
                android:layout_marginTop="17dp"
                android:background="@drawable/bg_button"
                android:text="重新申请"
                android:textColor="#fff" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>