<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:paddingLeft="@dimen/view_margin"
    android:background="#fff">
    
    <TextView 
        android:id="@+id/tv_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="发现故障"
        android:textSize="@dimen/text_size"
        android:textColor="#505050"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/view_margin_big"/>

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/main_top_margin"
        android:layout_marginBottom="@dimen/view_margin">
        <cn.com.hyrt.carserver.base.view.ImageLoaderView 
            android:id="@+id/iv_face_img"
            android:layout_width="@dimen/face_img_size_least"
            android:layout_height="@dimen/face_img_size_least"
            android:src="@drawable/img_car_default"
            android:background="@drawable/face_img_border_not_click"
            android:padding="1dp"
            android:scaleType="centerCrop"/>
                <TextView 
                    android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高级技工"
                android:textColor="#000"
                android:textSize="@dimen/text_size"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/main_top_margin"/>
                <TextView 
                    android:id="@+id/tv_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高级技工"
                android:textColor="#7a7a7a"
                android:textSize="@dimen/tab_text"
                android:layout_marginLeft="@dimen/view_margin"
                android:layout_gravity="center_vertical"/>
    </LinearLayout>
    
</LinearLayout>
