<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#40000000">
    

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:background="#06c5e9"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_question_position2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/image"
                android:text="@string/question_select_position"
                android:textColor="#fff"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl9"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_below="@id/rl"
            android:background="#ffffff" >

            <ListView 
            android:id="@+id/ls_correlation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/main_top_margin"
            android:divider="@color/line_color"
            android:dividerHeight="1dp"/>
            
        </RelativeLayout>
         
        <RelativeLayout
             android:id="@+id/rl10"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:layout_below="@id/rl9"
            android:layout_marginTop="-5dp"
            android:background="#cbcaca" >
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancle"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>