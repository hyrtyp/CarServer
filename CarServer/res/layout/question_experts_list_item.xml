<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    
	<cn.com.hyrt.carserver.base.view.ImageLoaderView 
	    android:id="@+id/iv_car_expert_face"
	    android:layout_width="@dimen/dimen_size_65"
	    android:layout_height="@dimen/dimen_size_65"
	        android:layout_marginLeft="@dimen/dimen_size_10"
	    android:src="@drawable/ic_logo"/>
	<RelativeLayout 
	    android:layout_toRightOf="@id/iv_car_expert_face"
	    android:layout_width="wrap_content"
	    android:layout_marginLeft="@dimen/dimen_size_10"
     	android:layout_height="wrap_content">
	    <TextView 
	        android:id="@+id/tv_car_expert_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="汽车专家"/>
	    
	    <TextView 
	        android:id="@+id/tv_car_expert_zhuanchang"
	        android:layout_width="@dimen/dimen_size_200"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/tv_car_expert_name"
	        android:singleLine="true"
			android:ellipsize="end"
	        android:text="专长"/>
	    
	    <LinearLayout
	        android:layout_width="@dimen/dimen_size_200"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/tv_car_expert_zhuanchang"
	        android:orientation="horizontal" >

	        <TextView
	            android:id="@+id/tv_car_expert_level"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="星级评定：" />

	        <RatingBar
	            android:id="@+id/rb_car_expert_score"
	            android:layout_width="wrap_content"
	            android:layout_height="15dp"
	            android:layout_gravity="center_vertical"
	            android:numStars="5"
	            android:clickable="false"
	            android:focusable="false"
	            android:progressDrawable="@drawable/bg_expert_level_star"
	            android:stepSize="1" />
	    </LinearLayout>
	   
	    <Button 
	        android:id="@+id/bt_ask"
	        android:layout_width="@dimen/dimen_size_55"
	        android:layout_height="@dimen/dimen_size_44"
	        android:text="提问"
	        android:layout_marginRight="@dimen/dimen_size_10"
	        android:background="@drawable/bt_ask_expert_btselecter"
	        android:layout_alignParentRight="true"
	        android:gravity="center_vertical"
	        android:layout_alignParentTop="true"/>
	</RelativeLayout>
</RelativeLayout>
