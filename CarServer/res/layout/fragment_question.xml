<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/full_bg"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
			<!-- 放置轮播图片位置 -->
        <LinearLayout
            android:id="@+id/top_news_viewpager"
            android:layout_width="fill_parent"
            android:layout_height="152dp"
            android:scaleType="centerCrop"
            android:orientation="horizontal" />
	
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:background="#88000000"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
			<!-- 放置图片标题的位置 -->
            <TextView
                android:id="@+id/top_news_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="图片标题"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:textColor="#F6F6F6"
                />
			<!-- 放置图片中选中点的位置 -->
            <LinearLayout
                android:id="@+id/dots_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                 />
        </LinearLayout>
            <!-- <android.support.v4.view.ViewPager
                android:id="@+id/bannerPager"
                android:layout_width="fill_parent"
                android:layout_height="152dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_question_banner" />
    -->
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/main_top_margin"
                android:scaleType="fitXY"
                android:src="@drawable/bg_line" />
 
            <include layout="@layout/layout_line" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="119dp"
                android:background="#fff"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_question_btn"
                    android:gravity="center"
                    android:text="@string/question_label"
                    android:textColor="#fff"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/bg_question_note"
                    android:gravity="center_horizontal"
                    android:paddingTop="12dp"
                    android:text="@string/question_note"
                    android:textColor="#111" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/main_top_margin"
                android:scaleType="fitXY"
                android:src="@drawable/bg_line" />

            <include layout="@layout/layout_line" />

            <cn.com.hyrt.carserver.base.view.FullGridView
                android:id="@+id/gvQuestion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="1dp"
                android:numColumns="2"
                android:verticalSpacing="1dp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/main_top_margin"
                android:scaleType="fitXY"
                android:src="@drawable/bg_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/main_top_margin"
                android:text="@string/question_find_experts"
                android:textColor="@color/tab_text"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/line_size"
                android:layout_marginTop="@dimen/main_top_margin"
                android:background="@color/line_color" />

            <cn.com.hyrt.carserver.base.view.FullGridView
                android:id="@+id/gvExperts"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="1dp"
                android:numColumns="2"
                android:verticalSpacing="1dp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/main_top_margin"
                android:scaleType="fitXY"
                android:src="@drawable/bg_line" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/main_top_margin"
                android:text="@string/knowledge_related_knowledge"
                android:textColor="@color/tab_text"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />
            

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/line_size"
                android:layout_marginTop="@dimen/main_top_margin"
                android:background="@color/line_color" />

            <cn.com.hyrt.carserver.base.view.FullGridView
                android:id="@+id/gvRelatedKnowledge1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="1dp"
                android:numColumns="2"
                android:verticalSpacing="1dp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/main_top_margin"
                android:scaleType="fitXY"
                android:src="@drawable/bg_line" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>