<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="122dp"
    android:orientation="horizontal" 
    android:background="#fff">
    
    <cn.com.hyrt.carserver.base.view.ImageLoaderView 
        android:id="@+id/iv_face_img"
        android:layout_width="@dimen/face_img_size"
        android:layout_height="@dimen/face_img_size"
        android:background="@drawable/face_img_border_not_click"
        android:src="@drawable/img_car_default"
        android:padding="1dp"
        android:layout_marginLeft="@dimen/view_margin"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/view_margin"
        android:layout_marginBottom="@dimen/view_margin"
        android:scaleType="centerCrop"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/iv_face_img"
        android:layout_alignTop="@id/iv_face_img"
        android:layout_marginLeft="@dimen/main_top_margin">
    <LinearLayout 
        android:id="@+id/iv_face_text"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/tv_car_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/input_text_size"
            android:textColor="#000"
            android:text="宝马X5（进口）"
            android:layout_marginBottom="@dimen/main_top_margin"/>
        <include layout="@layout/layout_line_small"/>
        <TextView 
            android:id="@+id/tv_add_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:textColor="#646363"
            android:text="添加时间：2014-06-10"
            android:layout_marginTop="@dimen/main_top_margin"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_add_car_condition"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
        <View 
            android:layout_width="@dimen/small_line_size"
            android:layout_height="fill_parent"
            android:background="@color/line_color" 
            android:layout_gravity="left"/>
        <TextView 
            android:id="@+id/tv_add_catstatus"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="@dimen/text_size"
            android:textColor="#646363"
            android:text="@string/info_mycar_addstatus"
            android:layout_marginLeft="@dimen/view_margin_small"
            android:layout_marginRight="@dimen/view_margin_small"
            android:gravity="center"/>
    </LinearLayout>
    </LinearLayout>
    
    
</RelativeLayout>
