<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/full_bg">

    <cn.com.hyrt.carserver.base.view.PullToRefreshView 
        android:id="@+id/ptrv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ScrollView 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <cn.com.hyrt.carserver.base.view.FullListView
                    android:id="@+id/lv_replys" 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:divider="#00000000"/>
                
                
                <TextView 
                    android:id="@+id/tv_prompt_one"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/main_top_margin"
                    android:text="@string/info_question_detail_prompt_one"/>
                <TextView 
                    android:id="@+id/tv_prompt_two"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/main_top_margin"
                    android:text="@string/info_question_detail_prompt"
                    android:padding="@dimen/main_top_margin"
                    android:background="#fff"/>
            </LinearLayout>
        </ScrollView>
    </cn.com.hyrt.carserver.base.view.PullToRefreshView>

</LinearLayout>
