<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    xmlns:limit="http://schemas.android.com/apk/res/cn.com.hyrt.carserver">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/main_top_margin"
                android:background="#fff" >

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/view_margin"
                        android:text="@string/info_njtime_label"
                        android:textColor="#000"
                        android:textSize="@dimen/text_size" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <include layout="@layout/layout_vertical_line_small" />

                        <EditText
                            android:id="@+id/et_njtime"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/view_margin"
                            android:background="#fff"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>
                </TableRow>

                <include layout="@layout/layout_line_small" />

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/view_margin"
                        android:text="@string/info_njpeople_label"
                        android:textColor="#000"
                        android:textSize="@dimen/text_size" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <include layout="@layout/layout_vertical_line_small" />

                        <cn.com.hyrt.carserver.base.view.LimitLengthEditText
                            android:id="@+id/et_njpeople"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="@dimen/view_margin"
                            android:background="#fff"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textSize="@dimen/text_size" 
                            limit:textLength="50"/>
                    </LinearLayout>
                </TableRow>

                <include layout="@layout/layout_line_small" />

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/view_margin"
                        android:text="@string/info_shouldtime_label"
                        android:textColor="#000"
                        android:textSize="@dimen/text_size" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <include layout="@layout/layout_vertical_line_small" />

                        <EditText
                            android:id="@+id/et_shouldtime"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="@dimen/view_margin"
                            android:background="#fff"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>
                </TableRow>

                <include layout="@layout/layout_line_small" />

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/view_margin"
                        android:text="@string/info_njefftime_label"
                        android:textColor="#000"
                        android:textSize="@dimen/text_size" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <include layout="@layout/layout_vertical_line_small" />

                        <EditText
                            android:id="@+id/et_njefftime"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="@dimen/view_margin"
                            android:background="#fff"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>
                </TableRow>

                <include layout="@layout/layout_line_small" />

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/view_margin"
                        android:text="@string/info_njcost_label"
                        android:textColor="#000"
                        android:textSize="@dimen/text_size" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <include layout="@layout/layout_vertical_line_small" />

                        <cn.com.hyrt.carserver.base.view.LimitLengthEditText
                            android:id="@+id/et_njcost"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="@dimen/view_margin"
                            android:background="#fff"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textSize="@dimen/text_size" 
                            android:inputType="numberDecimal"
                            limit:textLength="10"/>
                    </LinearLayout>
                </TableRow>

                <include layout="@layout/layout_line_small" />

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/view_margin"
                        android:text="@string/info_remarks_label"
                        android:textColor="#000"
                        android:textSize="@dimen/text_size" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <include layout="@layout/layout_vertical_line_small" />

                        <cn.com.hyrt.carserver.base.view.LimitLengthEditText
                            android:id="@+id/et_remarks"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="@dimen/view_margin"
                            android:background="#fff"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textSize="@dimen/text_size" 
                            limit:textLength="100"/>
                    </LinearLayout>
                </TableRow>

                <include layout="@layout/layout_line_small" />
            </TableLayout>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/view_margin"
                android:layout_marginTop="@dimen/main_top_margin"
                android:background="@drawable/bg_question_btn"
                android:gravity="center"
                android:text="@string/info_save"
                android:textColor="#fff"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>